<!DOCTYPE html>
<html lang="en">
  <%-include("./partials/head.ejs")%>

  <body>
    <%-include("./partials/navbar.ejs")%>
    <h1 id="createTitle">Create an food item</h1>
    <form action="/items" method="POST" class="formData">
      <!--  -->
      <label>Name of food</label>
      <input name="name" required type="text" /><br />
      <!--  -->
      <select name="Category" id="dropdown">
        <option value="snack">Snack</option>
        <option value="drink">Drink</option>
      </select>

      <!--  -->
      <label>Image url</label>
      <input name="imageUrl" required type="text" />
      <!--  -->
      <label>Description of item </label>
      <textarea name="foodDescription" rows="4" cols="50" required> </textarea>

      <!--  -->
      <label>Price </label>
      <input name="price" required type="number" />
      <!--  -->
      <label>Amount in stock</label>
      <input name="stock" required type="number" />

      <button>Submit</button>
    </form>
    <%-include("./partials/footer.ejs")%>
  </body>
</html>
