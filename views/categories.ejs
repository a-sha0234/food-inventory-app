<!DOCTYPE html>
<html lang="en">
  <%-include("./partials/head.ejs")%>
  <body>
    <%-include("./partials/navbar.ejs")%>
    <h1 style="text-align: center; margin: 20px">Categories</h1>

    <main>
      <h2 style="text-align: center">Snacks</h2>

      <%categories.forEach(item => { %> <% if(item.Category == "snack" ){ %>

      <div class="db_items">
        <a href="/categories/<%=item._id %>">
          <h1><%=item.name%></h1>

          <img
            src="<%=item.imageUrl%>"
            alt="<%=item.name%>"
            height="200px"
            width="200px" />
          <p>
            More details
            <img src="arrow.png" alt="arrow" height="20px" width="20px" /></p
        ></a>
      </div>

      <%}});%>

      <h2 style="text-align: center">Drinks</h2>
      <%categories.forEach(item => { %> <% if(item.Category == "drink" ){ %>
      <div class="db_items">
        <a href="/categories/<%=item._id %>">
          <h1><%=item.name%></h1>

          <img
            src="<%=item.imageUrl%>"
            alt="<%=item.name%>"
            height="200px"
            width="200px"
          />
          <p>
            More details
            <img src="arrow.png" alt="arrow" height="20px" width="20px" />
          </p>
        </a>
      </div>

      <%}});%>
    </main>
  </body>
</html>
