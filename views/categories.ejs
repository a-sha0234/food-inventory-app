<!DOCTYPE html>
<html lang="en">
  <%-include("./partials/head.ejs")%>
  <body>
    <%-include("./partials/navbar.ejs")%>
    <h1>Categories</h1>

    <main>
      <h2>Snacks</h2>
      <%categories.forEach(item => { %> <% if(item.Category == "snack" ){ %>

      <a href="/categories/<%=item._id %>">
        <h1><%=item.name%></h1>

        <img
          src="<%=item.imageUrl%>"
          alt="<%=item.name%>"
          height="200px"
          width="200px"
      /></a>

      <%}});%>

      <h2>Drinks</h2>
      <%categories.forEach(item => { %> <% if(item.Category == "drink" ){ %>
      <a href="/categories/<%=item._id %>">
        <h1><%=item.name%></h1>

        <img
          src="<%=item.imageUrl%>"
          alt="<%=item.name%>"
          height="200px"
          width="200px"
      /></a>

      <%}});%>
    </main>
  </body>
</html>
